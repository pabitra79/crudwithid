<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">
            <i class="fas fa-edit"></i>Edit Product
        </h1>
        
        <!-- Fixed: Changed action to handle POST for update -->
        <form action="/product/edit/<%= data._id %>" method="post">
            <div class="form-group mb-3">
                <label for="productName" class="form-label">
                    <i class="fas fa-box"></i>Product Name
                </label>
                <!-- Fixed: Changed name to match controller expectations -->
                <input type="text" class="form-control" id="productName" 
                       name="Product_name" value="<%= data.Product_name %>" required>
            </div>
            
            <div class="form-group mb-3">
                <label for="productSize" class="form-label">
                    <i class="fas fa-ruler-combined"></i>Product Size
                </label>
                <!-- Fixed: Changed name to match controller expectations, handle array -->
                <input type="text" class="form-control" id="productSize" 
                       name="Product_size" value="<%= Array.isArray(data.Product_size) ? data.Product_size.join(', ') : data.Product_size %>" required>
            </div>
            
            <div class="form-group mb-3">
                <label for="productColor" class="form-label">
                    <i class="fas fa-palette"></i>Product Color
                </label>
                <!-- Fixed: Changed name to match controller expectations, handle array -->
                <input type="text" class="form-control" id="productColor" 
                       name="Product_color" value="<%= Array.isArray(data.Product_color) ? data.Product_color.join(', ') : data.Product_color %>" required>
            </div>
            
            <div class="form-group mb-3">
                <label for="userSelect" class="form-label">
                    <i class="fas fa-user"></i>Select User
                </label>
                <!-- Fixed: Changed name to match controller expectations -->
                <select class="form-select form-control" id="userSelect" name="userId" required>
                    <% user.forEach((userItem, index) => { %>
                        <!-- Fixed: Changed comparison field -->
                        <option value="<%= userItem._id %>" 
                                <%= userItem._id.toString() === data.userId.toString() ? 'selected' : '' %>>
                            <%= userItem.user_name %>
                        </option>
                    <% }); %>
                </select>
            </div>
            
            <div class="form-group mb-3">
                <button type="submit" class="btn btn-success w-100">
                    <i class="fas fa-save me-2"></i>Update Product
                </button>
                <a href="/productName" class="btn btn-secondary w-100 mt-2">
                    <i class="fas fa-arrow-left me-2"></i>Back to List
                </a>
            </div>
        </form>
    </div>

    <!-- jQuery and Bootstrap Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>